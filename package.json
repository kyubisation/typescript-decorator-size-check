{
  "name": "typescript-decorator-size-check",
  "version": "0.0.0",
  "description": "Checking the output size of decorator implementations",
  "type": "module",
  "scripts": {
    "calculate": "run-s build minify calculate-size",
    "build": "run-p build:*",
    "build:standard-no-tslib": "tsc -p tsconfig.standard.no-tslib.json",
    "build:standard-tslib": "tsc -p tsconfig.standard.tslib.json",
    "build:experimental-no-tslib": "tsc -p tsconfig.experimental.no-tslib.json",
    "build:experimental-tslib": "tsc -p tsconfig.experimental.tslib.json",
    "minify": "node minify.ts",
    "calculate-size": "node calculate-size.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/typescript-decorator-size-check.git"
  },
  "author": "Lukas Spirig",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/typescript-decorator-size-check/issues"
  },
  "homepage": "https://github.com/kyubisation/typescript-decorator-size-check#readme",
  "dependencies": {
    "@types/node": "^24.0.13",
    "lit": "^3.3.1",
    "npm-run-all2": "^8.0.4",
    "terser": "^5.43.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
